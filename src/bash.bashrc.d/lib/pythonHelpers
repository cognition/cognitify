# Function: setpyenv
# Creates a Python virtual environment using Python 3.12.
# Parameters:
#   $1 - Prompt name for the virtual environment
#   $2 - Directory name for the virtual environment (default: venv)
setpyenv() {
  local python_cmd
  python_cmd=$(command -v python3.12 2>/dev/null)
  
  if [[ -z "$python_cmd" ]]; then
    echo "Error: python3.12 not found" >&2
    return 1
  fi
  
  if [[ -z "$1" ]]; then
    echo "Error: Prompt name is required" >&2
    echo "Usage: setpyenv <prompt-name> [env-dir]" >&2
    return 1
  fi
  
  local env_dir="${2:-venv}"
  echo "setup python env" 
  "$python_cmd" -m venv --clear --prompt "${1}" "${env_dir}"
  source "${env_dir}/bin/activate" 
  pip install pip --upgrade 
}

