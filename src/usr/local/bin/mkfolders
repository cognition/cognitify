#!/bin/bash 

# Check if a file is passed as an argument
if [ -z "$1" ]; then
    echo "Usage: $0 <filename>" >&2
    exit 1
fi

# Check if the input file exists
if [[ ! -f "$1" ]]; then
    echo "Error: File not found: $1" >&2
    exit 1
fi

# Read each line from the file and iterate over it
while IFS= read -r line || [ -n "$line" ]; do
    [[ -z "$line" ]] && continue
    # Process the string (for example, print each string)
    echo "Processing: $line"
    if [[ ! -d "${PWD}/${line}" ]]; then 
        if ! mkdir "${PWD}/${line}"; then
            echo "Error: Failed to create directory: ${PWD}/${line}" >&2
        fi
    fi 


done < "$1"