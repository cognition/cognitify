# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

set bell-style none

# Shell options
shopt -s cmdhist
shopt -s checkwinsize
shopt -s globstar

BASE_PATH="/etc/bash.bashrc.d"

# Source prompt and alias configurations
if [[ -f ${BASE_PATH}/promptrc ]]; then
   source ${BASE_PATH}/promptrc
fi

if [[ -f ${BASE_PATH}/aliasrc ]]; then
   source ${BASE_PATH}/aliasrc
fi

# User-specific override file (for prompt and alias customizations)
if [[ -f "${HOME}/.over-ride" ]]; then
   source "${HOME}/.over-ride"
fi
